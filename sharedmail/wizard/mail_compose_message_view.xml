<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="email_compose_message_wizard_form_sharedmail">
            <field name="name">mail.compose.message.form.sharedmail</field>
            <field name="model">mail.compose.message</field>
            <field name="arch" type="xml">
                <form string="Compose Shared Email" version="7.0">
                    <group>
                        <!-- truly invisible fields for control and options -->
                        <field name="composition_mode" invisible="1" />
                        <field name="model" invisible="1" />
                        <field name="res_id" invisible="1" />
                        <field name="parent_id" invisible="1" context="{'sharedmail_messages': True}"/>
                        <!-- visible wizard -->
                        <field name="server_sharedmail_id"
                               required="1"
                               options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"
                        />
                        <label for="partner_ids" string="Recipients"
                                    invisible="context.get('mail_compose_log', False)"/>
                        <div groups="base.group_user" invisible="context.get('mail_compose_log', False)">
                            <!--<span attrs="{'invisible':['|', ('model', '=', False), ('composition_mode', '!=', 'mass_mail')]}">-->
                                    <!--Followers of selected items and </span>-->
                            <!--<span attrs="{'invisible':['|', ('model', '=', False), ('composition_mode', '=', 'mass_mail')]}">-->
                                    <!--Followers of-->
                                <!--<field name="record_name" readonly="1" class="oe_inline"-->
                                           <!--attrs="{'invisible':[('model', '=', False)]}"/>-->
                                    <!--and-->
                            <!--</span>-->
                            <field name="partner_ids" widget="many2many_tags" placeholder="Add contacts to notify..." required="1" context="{'show_sharedmail_email':True}"/>
                        </div>
                        <field name="subject" placeholder="Subject..." />
                    </group>
                    <field name="body"/>
                    <field name="attachment_ids" widget="many2many_binary" />
                    <footer>
                        <button string="Invia E-mail" name="send_mail" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sharedmail_mail_compose_message_wizard" model="ir.actions.act_window">
            <field name="name">Scrivi E-mail</field>
            <field name="res_model">mail.compose.message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context" >{'new_sharedmail_mail': True,'sharedmail_messages': True,'show_sharedmail_email':True}</field>
            <field name="target">new</field>
        </record>

        <record id="action_reply_sharedmail_compose_message_wizard" model="ir.actions.act_window">
            <field name="name">Reply Shared Email</field>
            <field name="res_model">mail.compose.message</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context" >{'new_sharedmail_mail': True,'reply_sharedmail':True,'sharedmail_messages': True,'show_sharedmail_email':True, 'message_id': active_id}</field>
            <field name="target">new</field>
        </record>

        <record id="action_write_sharedmail_wizard" model="ir.actions.act_window.view">
            <field name="sequence" eval="4"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="email_compose_message_wizard_form_sharedmail"/>
            <field name="act_window_id" ref="action_sharedmail_mail_compose_message_wizard"/>
        </record>

        <record id="action_reply_sharedmail_wizard" model="ir.actions.act_window.view">
            <field name="sequence" eval="4"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="email_compose_message_wizard_form_sharedmail"/>
            <field name="act_window_id" ref="action_reply_sharedmail_compose_message_wizard"/>
        </record>




    </data>
</openerp>
